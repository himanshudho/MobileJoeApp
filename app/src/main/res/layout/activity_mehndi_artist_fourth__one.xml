<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.tecmanic.goservices.MakupAndHairActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_all_services" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="80dp"
                android:orientation="vertical">




                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"/>

                        <me.relex.circleindicator.CircleIndicator
                            android:id="@+id/indicator"
                            android:layout_width="match_parent"
                            app:ci_gravity="right"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            app:ci_drawable_unselected="@drawable/white_view_rect1"
                            app:ci_drawable="@drawable/white_view_rect"
                            app:ci_height="5dp"
                            app:ci_width="5dp"
                            android:layout_height="28dp"/>

                    </FrameLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11.7dp"
                        android:layout_marginTop="150dp"
                        android:layout_marginRight="11.7dp"
                        android:layout_marginBottom="10.7dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:layout_marginLeft="15dp"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Monika"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="#5a5b65"
                                    android:textSize="21.7sp"/>

                                <!--<TextView-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:text="Rich White Chocolate Wax"-->
                                <!--android:fontFamily="@font/roboto_regular"-->
                                <!--android:layout_marginTop="12dp"-->
                                <!--android:textColor="#8f909e"-->
                                <!--android:textSize="11.7sp"/>-->


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="$10"
                                        android:textSize="20sp"
                                        android:textColor="#5a5b65"
                                        android:fontFamily="@font/roboto_medium"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/_15"
                                        android:textSize="13.3sp"
                                        android:textColor="#8f909e"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="5dp"
                                        android:fontFamily="@font/roboto_regular"/>


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Save 25%"
                                        android:textSize="13.3sp"
                                        android:textColor="#f97b73"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="7dp"
                                        android:fontFamily="@font/roboto_regular"/>
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="15dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:layout_gravity="right"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="15 min"
                                        android:textSize="8.3sp"
                                        android:textColor="#8f909e"
                                        android:layout_marginRight="4dp"
                                        android:fontFamily="@font/roboto_regular"/>


                                    <ImageView
                                        android:layout_width="10.3dp"
                                        android:layout_height="10.3dp"
                                        android:src="@drawable/ic_clock"/>
                                </LinearLayout>




                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <!--<LinearLayout-->
                                        <!--android:id="@+id/linear_add"-->
                                        <!--android:layout_width="wrap_content"-->
                                        <!--android:layout_height="wrap_content"-->
                                        <!--android:orientation="horizontal"-->
                                        <!--android:background="@drawable/blue_light_rect">-->

                                        <!--<TextView-->
                                            <!--android:layout_width="wrap_content"-->
                                            <!--android:layout_height="wrap_content"-->
                                            <!--android:text="Add"-->
                                            <!--android:paddingLeft="19dp"-->
                                            <!--android:paddingRight="19dp"-->
                                            <!--android:paddingTop="5dp"-->
                                            <!--android:paddingBottom="5dp"-->
                                            <!--android:fontFamily="@font/roboto_regular"-->
                                            <!--android:textColor="@color/blue"/>-->
                                    <!--</LinearLayout>-->

                                    <LinearLayout
                                        android:id="@+id/linear_count"
                                        android:visibility="visible"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:background="@drawable/blue_light_rect">


                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_margin="1dp"
                                            android:layout_gravity="center"
                                            android:background="#f2f2f2">


                                            <ImageView
                                                android:id="@+id/minus"
                                                android:layout_width="17dp"
                                                android:layout_height="match_parent"
                                                android:paddingRight="4dp"
                                                android:paddingLeft="4dp"
                                                android:src="@drawable/ic_minus"
                                                android:layout_gravity="center"/>

                                        </FrameLayout>


                                        <TextView
                                            android:id="@+id/number"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="1"
                                            android:paddingLeft="7dp"
                                            android:paddingRight="7dp"
                                            android:paddingTop="4dp"
                                            android:paddingBottom="4dp"
                                            android:layout_gravity="center"
                                            android:fontFamily="@font/roboto_regular"
                                            android:textColor="@color/blue"/>
                                        <FrameLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_margin="1dp"
                                            android:background="#f2f2f2">


                                            <ImageView
                                                android:id="@+id/plus"
                                                android:layout_width="17dp"
                                                android:layout_height="match_parent"
                                                android:src="@drawable/ic_plus"
                                                android:paddingRight="4dp"
                                                android:paddingLeft="4dp"
                                                android:layout_gravity="center"/>

                                        </FrameLayout>
                                    </LinearLayout>


                                </FrameLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </FrameLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/CardReview"
                    android:layout_marginTop="1.7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="11.7dp"
                    android:layout_marginLeft="11.7dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="11.7dp"
                        android:background="@drawable/gradient_rect"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_star3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18.3sp"
                            android:text="4.5"
                            android:layout_marginLeft="8dp"
                            android:fontFamily="@font/roboto_bold"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="1000+ Happy Customers"
                            android:layout_marginLeft="10dp"
                            android:textSize="13.3sp"
                            android:fontFamily="@font/roboto_regular"/>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_right_arrow3"
                            android:layout_gravity="center"/>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.7dp"
                    android:layout_marginRight="11.7dp"
                    android:layout_marginLeft="11.7dp"
                    android:layout_marginBottom="10.7dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="11.7dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/walkthrough_txt"
                            android:text="Brand"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="16.7sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Honey/ Silk"
                            android:textSize="13.3sp"
                            android:textColor="#7f8088"
                            android:layout_marginTop="11dp"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.7dp"
                    android:layout_marginRight="11.7dp"
                    android:layout_marginLeft="11.7dp"
                    android:layout_marginBottom="10.7dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="11.7dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/walkthrough_txt"
                            android:text="Notes"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="16.7sp"/>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:src="@drawable/cirlce_dot"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AC is recommend during summary season."
                                android:textSize="13.3sp"
                                android:layout_marginLeft="5dp"
                                android:textColor="#7f8088"
                                android:fontFamily="@font/roboto_regular"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:src="@drawable/cirlce_dot"
                                android:layout_gravity="center"
                                android:layout_marginBottom="7dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                                android:textSize="13.3sp"
                                android:layout_marginLeft="5dp"
                                android:textColor="#7f8088"
                                android:fontFamily="@font/roboto_regular"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="7dp"
                                android:layout_height="7dp"
                                android:src="@drawable/cirlce_dot"
                                android:layout_gravity="center"
                                android:layout_marginBottom="7dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="It is a long established fact that a reader will be distracted by the readable."
                                android:textSize="13.3sp"
                                android:layout_marginLeft="5dp"
                                android:textColor="#7f8088"
                                android:fontFamily="@font/roboto_regular"/>

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>




    </LinearLayout>

    <LinearLayout
        android:layout_above="@+id/bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/shadow"/>


    <LinearLayout
        android:id="@+id/bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_gradient_rect"
                android:layout_margin="11.7dp"
                android:paddingTop="8.3dp"
                android:paddingBottom="8.3dp"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:paddingLeft="9dp"
                    android:paddingRight="9dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:fontFamily="@font/roboto_regular"
                    android:background="@drawable/white_rect"
                    android:text="1"/>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save $5 on this booking"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_regular"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$15"
                        android:textSize="18.3sp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/roboto_medium"/>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summary"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_regular"/>


                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_right_arrow3"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>
