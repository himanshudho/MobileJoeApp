<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".CoinActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/backbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/ic_back2"

                ></ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_weight="8"
                android:text="Your Cart"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>
        </LinearLayout>


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/b"
            android:gravity="center"
            android:text="New Hair Salon"
            android:textColor="@color/black"

            android:textSize="15dp"
            android:typeface="serif"


            >
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/b"
            android:gravity="center"
            android:text="Siyaganj Indore"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:typeface="serif"

            >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/b"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="Item Name's"
                android:textColor="@color/black"
                android:textSize="15dp"></TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/b"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="15dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/b"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="Total"
                android:textColor="@color/black"
                android:textSize="15dp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/b"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="(Price-offer Price)"
                android:textColor="@color/black"
                android:textSize="15dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/b"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/b"
                android:gravity="center"
                android:text="Apply Coupans"
                android:textColor="@color/black"
                android:textSize="15dp">

            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/b"
                android:gravity="center"

                android:textColor="@color/black"
                android:textSize="15dp">

            </TextView>



        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/black"
            android:gravity="center"
            android:text="Apply"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"

            >

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/b"
                android:gravity="center"
                android:text="Service Charges"
                android:textColor="@color/black"
                android:textSize="15dp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/b"
                android:gravity="center"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textSize="15dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/b"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="Total Savings"
                android:textColor="@color/black"
                android:textSize="15dp">

            </TextView>

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/b"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="P-(oP+coupan)"
                android:textColor="@color/black"
                android:textSize="15dp">

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/b"
                android:gravity="center"
                android:text="Net Pay"
                android:textColor="@color/black"
                android:textSize="15dp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/b"

                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15dp">

            </TextView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/black"
            android:gravity="center"
            android:text="Select Date And Time"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"


            >

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/b"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="Calender "
                android:textColor="@color/black"
                android:textSize="15dp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/b"
                android:gravity="center"

                android:text="Time"
                android:textColor="@color/black"
                android:textSize="15dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/b"
                android:gravity="center"
                android:text="Sunday,12th sep '21"
                android:textColor="@color/black"
                android:textSize="15dp">

            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/b"
                android:gravity="center"
                android:paddingStart="10dp"
                android:text="12:00PM"
                android:textColor="@color/black"
                android:textSize="15dp">

            </TextView>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/black"
            android:gravity="center"
            android:text="Book Now"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"

            >

        </TextView>


    </LinearLayout>


</LinearLayout>