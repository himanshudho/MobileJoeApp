<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.7dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="left|top"></ImageView>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Half Arm Waxing"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tdesc"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rich White Chocolate Wax"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="3dp"
                    android:textColor="#8f909e"
                    android:textSize="11.7sp"/>
                <RatingBar
                    android:id="@+id/rating"
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:theme="@style/Widget.AppCompat.RatingBar.Small"
                    android:stepSize="0.1"
                    android:isIndicator="true" />



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$10"
                        android:textSize="14sp"
                        android:textColor="#5a5b65"
                        android:fontFamily="@font/roboto_medium"/>

                    <TextView
                        android:id="@+id/tmrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_15"
                        android:textSize="13.3sp"
                        android:textColor="#8f909e"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/roboto_regular"/>


                    <TextView
                        android:visibility="gone"
                        android:id="@+id/totalsave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save 25%"
                        android:textSize="13.3sp"
                        android:textColor="#f97b73"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/roboto_regular"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/clock"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="11.3dp"
                        android:layout_height="11.3dp"
                        android:layout_gravity="left|center"
                        android:src="@drawable/ic_clock"/>

                    <TextView
                        android:id="@+id/timie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 min"
                        android:textSize="11.3sp"
                        android:textColor="#8f909e"
                        android:layout_marginLeft="4dp"
                        android:fontFamily="@font/roboto_regular"/>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/viewdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Details"
                        android:textSize="11.3sp"
                        android:paddingBottom="5dp"
                        android:textColor="@color/darkgreen"
                        android:fontFamily="@font/roboto_regular"/>

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_marginLeft="2dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/darkgreen"
                        android:background="@drawable/ic_next1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="end"
                android:layout_gravity="end|center"
                android:orientation="vertical">

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:id="@+id/l1_rating"
                    android:orientation="horizontal">

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 min"
                    android:textSize="8.3sp"
                    android:textColor="#8f909e"
                    android:layout_marginRight="4dp"
                    android:fontFamily="@font/roboto_regular"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_width="10.3dp"
                    android:layout_height="10.3dp"
                    android:src="@drawable/ic_clock"/>
                    <RatingBar
                        android:visibility="gone"
                        android:id="@+id/rating1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:theme="@style/Widget.AppCompat.RatingBar.Small"
                        android:stepSize="0.1"
                        android:isIndicator="true" />

                </LinearLayout>




                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linear_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:background="@drawable/blue_light_rect">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADD"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/darkgreen"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="1.5dp"
                            android:layout_marginBottom="1.5dp"
                            android:background="#f4f4f4">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="left|center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_plus" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_count"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:background="@drawable/blue_light_rect">


                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="1.2dp"
                            android:background="#f2f2f2">


                            <ImageView
                                android:id="@+id/minus"
                                android:layout_width="17dp"
                                android:layout_height="match_parent"
                                android:paddingRight="4dp"
                                android:paddingLeft="4dp"
                                android:src="@drawable/ic_minus"
                                android:layout_gravity="center"/>

                        </FrameLayout>


                        <TextView
                            android:id="@+id/number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:paddingLeft="8.5dp"
                            android:paddingRight="8.5dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/darkgreen"/>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="1.2dp"
                            android:layout_gravity="center"
                            android:background="#f2f2f2">


                            <ImageView
                                android:id="@+id/plus"
                                android:layout_width="17dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_plus"
                                android:paddingRight="4dp"
                                android:paddingLeft="4dp"
                                android:layout_gravity="center"/>

                        </FrameLayout>
                    </LinearLayout>

                </FrameLayout>
                <TextView
                    android:id="@+id/txtAddons"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:text="Add-ons"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="3dp"
                    android:layout_gravity="bottom|end"
                    android:gravity="bottom|end"
                    android:textSize="11.3sp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/darkgreen"
                    android:fontFamily="@font/roboto_regular"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"></View>
</LinearLayout>