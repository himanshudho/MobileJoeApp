<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tecmanic.goservices.WeddingPartyOneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar_appliance_repair" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="21.7sp"
            android:textColor="@color/txt_color"
            android:text="Select Service for Geyser:"
            android:gravity="center"
            android:layout_marginTop="33.3dp"
            android:fontFamily="@font/roboto_bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33.3dp"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="33dp"
            android:orientation="vertical">


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Installation"
                    android:textColor="@color/txt_color"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="15sp"
                    android:theme="@style/MyRadioButton"
                    android:paddingLeft="8dp"/>

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 20"
                    android:textSize="13.3sp"
                    android:textColor="#8f909e"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/roboto_regular"/>


                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Uninstallation"
                    android:textColor="@color/txt_color"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="15sp"
                    android:theme="@style/MyRadioButton"
                    android:layout_marginTop="33dp"
                    android:paddingLeft="8dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 40"
                    android:textSize="13.3sp"
                    android:textColor="#8f909e"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/roboto_regular"/>


                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Repair"
                    android:textColor="@color/txt_color"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="15sp"
                    android:theme="@style/MyRadioButton"
                    android:layout_marginTop="33dp"
                    android:paddingLeft="8dp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price on Inspection"
                    android:textSize="13.3sp"
                    android:textColor="#8f909e"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/roboto_regular"/>





            </RadioGroup>



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_above="@+id/bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/shadow"/>

    <LinearLayout
        android:id="@+id/bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_gradient_rect"
            android:text="Get Started"
            android:textSize="18.3sp"
            android:layout_margin="11.7dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:textAllCaps="false"/>
    </LinearLayout>

</RelativeLayout>
