<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.tecmanic.goservices.MakupAndHairActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_appliance_repair" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="100dp"
                android:orientation="vertical">




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How many are there:"
                    android:textColor="@color/txt_color"
                    android:textSize="21.7sp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="33dp"
                    android:gravity="center"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:layout_marginTop="38dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/walkthrough_txt"
                            android:text="Kitchen Sink"
                            android:fontFamily="@font/roboto_regular"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$30"
                            android:textColor="#8f909e"
                            android:textSize="13.3sp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/roboto_regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_count"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/blue_light_rect">


                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_gravity="center"
                            android:background="#f2f2f2">


                            <ImageView
                                android:id="@+id/minus"
                                android:layout_width="17dp"
                                android:layout_height="match_parent"
                                android:paddingRight="4dp"
                                android:paddingLeft="4dp"
                                android:src="@drawable/ic_minus"
                                android:layout_gravity="center"/>

                        </FrameLayout>


                        <TextView
                            android:id="@+id/number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/blue"/>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="#f2f2f2">


                            <ImageView
                                android:id="@+id/plus"
                                android:layout_width="17dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_plus"
                                android:paddingRight="4dp"
                                android:paddingLeft="4dp"
                                android:layout_gravity="center"/>

                        </FrameLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:layout_marginRight="33dp"
                    android:layout_marginTop="38dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/walkthrough_txt"
                            android:text="Tap "
                            android:fontFamily="@font/roboto_regular"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$30"
                            android:textColor="#8f909e"
                            android:textSize="13.3sp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/roboto_regular"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_count1"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:background="@drawable/blue_light_rect">


                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_gravity="center"
                            android:background="#f2f2f2">


                            <ImageView
                                android:id="@+id/minus1"
                                android:layout_width="17dp"
                                android:layout_height="match_parent"
                                android:paddingRight="4dp"
                                android:paddingLeft="4dp"
                                android:src="@drawable/ic_minus"
                                android:layout_gravity="center"/>

                        </FrameLayout>


                        <TextView
                            android:id="@+id/number1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/blue"/>
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:background="#f2f2f2">


                            <ImageView
                                android:id="@+id/plus1"
                                android:layout_width="17dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_plus"
                                android:paddingRight="4dp"
                                android:paddingLeft="4dp"
                                android:layout_gravity="center"/>

                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>
        </ScrollView>



    </LinearLayout>

    <LinearLayout
        android:layout_above="@+id/bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/shadow"/>

    <LinearLayout
        android:id="@+id/bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_gradient_rect"
            android:text="Next"
            android:textSize="18.3sp"
            android:layout_margin="11.7dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:textAllCaps="false"/>
    </LinearLayout>


</RelativeLayout>
