<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MaleSallon">
    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar"
       android:background="@drawable/myback"
        app:title="All Available hear"
        >
    </com.google.android.material.appbar.MaterialToolbar>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_margin="8dp"
                android:src="@drawable/search">
            </ImageView>
            <EditText
                android:id="@+id/editsearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="search heare"
                android:background="@null"
                android:layout_weight="8.5"
                >
            </EditText>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="2dp"
        android:id="@+id/cardview"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/civ"
                android:layout_margin="20dp"
                android:src="@drawable/fingernail"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                >
            </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Female Salon"
                android:gravity="center"
                android:id="@+id/name"
                android:textColor="@color/black"
                android:textSize="15dp"
                >
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="2dp"
        android:id="@+id/cardview2"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/civ2"
                android:layout_margin="20dp"
                android:src="@drawable/malesaloon2105"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                >
            </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Male Salon"
                android:gravity="center"
                android:id="@+id/name2"
                android:textColor="@color/black"
                android:textSize="15dp"
                >
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="2dp"
        android:id="@+id/cardview3"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/civ3"
                android:layout_margin="20dp"
                android:src="@drawable/mansalon"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                >
            </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Unisex Salon"
                android:gravity="center"
                android:id="@+id/name3"
                android:textColor="@color/black"
                android:textSize="15dp"
                >
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardview1"
        android:layout_margin="2dp"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/civ1"
                android:layout_margin="20dp"
                android:src="@drawable/home"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                >
            </de.hdodenhof.circleimageview.CircleImageView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Home service"
                android:gravity="center"
                android:id="@+id/name1"
                android:textColor="@color/black"
                android:textSize="15dp"
                >
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>








    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv"
        >
    </androidx.recyclerview.widget.RecyclerView>
</androidx.appcompat.widget.LinearLayoutCompat>